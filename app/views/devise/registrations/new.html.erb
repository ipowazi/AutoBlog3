<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="devise"><p><%= f.label :name %><br />
  <%= f.text_field :name %></p></div>

  <div class="devise"><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div class="devise"><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div class="devise"><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div class="devise"><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
