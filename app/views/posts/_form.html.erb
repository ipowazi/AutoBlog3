<%= form_for @post do |f| %>
	<%= f.label :title %> <br />
	<%= f.text_field :title %> <br /> <br />

	<%= f.label :body %> <br />
	<%= f.text_field :body %> <br /> <br />

	<%= f.hidden_field :user_id, :value => current_user.id %>

	<% if @post %>
		<%= f.submit "Update Post" %>	
	<% else %>
		<%= f.submit "Submit" %>
	<% end %>
<% end %>